{
  "name": "@ginpei/seymour",
  "version": "0.1.0",
  "main": "dist/index.js",
  "bin": {
    "seymour": "./dist/cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\""
  },
  "keywords": ["semantic-search", "embeddings", "openai", "cli", "markdown"],
  "author": "Ginpei",
  "license": "UNLICENSED",
  "description": "A simple CLI tool for semantic search over local Markdown documentation using OpenAI embeddings",
  "repository": {
    "type": "git",
    "url": "https://github.com/ginpei/seymour.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "fast-glob": "^3.3.3",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.14.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
